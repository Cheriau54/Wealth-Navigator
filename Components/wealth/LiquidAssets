import React, { useState } from 'react';
import { Wallet, Plus, Pencil, Trash2 } from 'lucide-react';
import { Button } from "@/components/ui/button";
import SectionCard from './SectionCard';
import EditModal from './EditModal';
import { convertCurrency, formatCurrency, CURRENCY_SYMBOLS } from './CurrencyUtils';

const FIELDS = [
  { key: 'accountName', label: 'Account Name', type: 'text', placeholder: 'e.g. Chase Checking' },
  { key: 'balance', label: 'Balance', type: 'number', placeholder: '0.00' },
  { key: 'currency', label: 'Currency', type: 'currency', default: 'USD' }
];

export default function LiquidAssets({ data, setData, masterCurrency }) {
  const [modalOpen, setModalOpen] = useState(false);
  const [editIndex, setEditIndex] = useState(null);

  const calculateTotal = () => {
    return data.reduce((sum, item) => {
      return sum + convertCurrency(item.balance, item.currency, masterCurrency);
    }, 0);
  };

  const handleSave = (formData) => {
    const newData = [...data];
    
    // Merge rule: same account name and currency
    const existingIndex = newData.findIndex(
      (item, idx) => idx !== editIndex && 
        item.accountName.toLowerCase() === formData.accountName.toLowerCase() && 
        item.currency === formData.currency
    );

    if (existingIndex !== -1 && editIndex === null) {
      newData[existingIndex].balance += formData.balance;
    } else if (editIndex !== null) {
      newData[editIndex] = formData;
    } else {
      newData.push({ ...formData, id: Date.now() });
    }
    
    setData(newData);
    setEditIndex(null);
  };

  const handleEdit = (index) => {
    setEditIndex(index);
    setModalOpen(true);
  };

  const handleDelete = (index) => {
    setData(data.filter((_, i) => i !== index));
  };

  const handleAdd = () => {
    setEditIndex(null);
    setModalOpen(true);
  };

  return (
    <SectionCard
      title="Liquid Assets"
      icon={<Wallet className="w-5 h-5 text-[#4ade80]" />}
      headerValue={calculateTotal()}
      masterCurrency={masterCurrency}
    >
      <div className="space-y-3">
        <div className="overflow-x-auto pb-2">
          {data.length === 0 ? (
            <div className="text-center py-8 text-white/30">
              No liquid assets added yet
            </div>
          ) : (
            <div className="flex gap-3 min-w-max">
              {data.map((item, index) => {
                const convertedValue = convertCurrency(item.balance, item.currency, masterCurrency);
                return (
                  <div 
                    key={item.id || index}
                    className="flex-shrink-0 w-64 p-3 rounded-xl bg-white/5 hover:bg-white/[0.07] transition-colors group"
                  >
                    <div className="flex flex-col h-full">
                      <div className="flex-1">
                        <div className="font-medium text-white/90 mb-2">{item.accountName}</div>
                        <div className="text-sm text-white/40">
                          {formatCurrency(item.balance, item.currency)}
                        </div>
                        {item.currency !== masterCurrency && (
                          <div className="text-xs text-[#4ade80] mt-1">
                            â‰ˆ {formatCurrency(convertedValue, masterCurrency)}
                          </div>
                        )}
                      </div>
                      <div className="flex items-center gap-2 mt-3 opacity-0 group-hover:opacity-100 transition-opacity">
                        <Button
                          size="icon"
                          variant="ghost"
                          onClick={() => handleEdit(index)}
                          className="h-8 w-8 text-white/50 hover:text-white hover:bg-white/10"
                        >
                          <Pencil className="w-4 h-4" />
                        </Button>
                        <Button
                          size="icon"
                          variant="ghost"
                          onClick={() => handleDelete(index)}
                          className="h-8 w-8 text-white/50 hover:text-[#f87171] hover:bg-red-500/10"
                        >
                          <Trash2 className="w-4 h-4" />
                        </Button>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          )}
        </div>
        
        <Button
          onClick={handleAdd}
          className="w-full bg-white/5 hover:bg-white/10 text-white/70 border border-dashed border-white/20"
        >
          <Plus className="w-4 h-4 mr-2" />
          Add Account
        </Button>
      </div>

      <EditModal
        isOpen={modalOpen}
        onClose={() => { setModalOpen(false); setEditIndex(null); }}
        title={editIndex !== null ? "Edit Account" : "Add Liquid Asset"}
        fields={FIELDS}
        data={editIndex !== null ? data[editIndex] : null}
        onSave={handleSave}
      />
    </SectionCard>
  );
}